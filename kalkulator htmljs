java

document.writeln("<pre>");
document.writeln("<h1>Operasi Aritmatika</h1>");

var A = "100";
var B = "200";
var C = 300;
var D = 400;

// Penjumlahan string (akan menggabungkan, bukan menjumlahkan)
var E = A + B;
document.writeln('"100" + "200" = ' + E);

// "200" + 300 → string + number → string
E = B + C;
document.writeln('"200" + 300 = ' + E);

// Penjumlahan angka murni
E = C + D;
document.writeln('300 + 400 = ' + E);

// Pengurangan
E = D - C;
document.writeln('400 - 300 = ' + E);

// Perkalian
E = C * D;
document.writeln('300 * 400 = ' + E);

// Pembagian
E = D / C;
document.writeln('400 / 300 = ' + E);

// Modulus (opsional)
E = D % C;
document.writeln('400 % 300 = ' + E);

document.writeln("</pre>");
